<%
err = []
begin
    # delete the action
    DB.execute("UPDATE eml_action SET status=false, delete_time='#{now}' WHERE id='#{params[:aid]}'")
    # return
    redirect "/emails/actions?msg="+ CGI::escape('Action deleted.')
rescue => e
    # return errors
    redirect "/emails/actions?err="+ CGI::escape(e.message)
end
%>